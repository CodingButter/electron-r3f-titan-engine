{
    "compilerOptions": {
        "target": "ES2020",
        "useDefineForClassFields": true,
        "lib": [
            "ES2020", "DOM", "DOM.Iterable"
        ],
        "module": "ESNext",
        "skipLibCheck": true,
        "moduleResolution": "bundler",
        "allowImportingTsExtensions": true,
        "noImplicitAny": false,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "no-inferrable-types": false,
        "noEmit": true,
        "jsx": "react-jsx",
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
        "baseUrl": ".",
        "paths": {
            "@titan/*": ["./*"],
            "@titan-electron/*": ["electron/*"],
            "@titan-engine/*": ["src/engine/*"],
            "@titan-ui/*": ["src/ui/*"],
            "@titan-shared/*": ["src/shared/*"],
            "@titan-utils/*": ["utils/*"],
            "@titan-apis/*": ["electron/apis/*"],
            "@titan-types/*": ["types/*"]
        }


    },
    "include": [
        "./src/**/*", "./electron/**/*", "./types/**/*", "./utils/**/*"
    ],
    "references": [
        {
            "path": "./tsconfig.node.json"
        }
    ],
    "files": ["./src/index.d.ts"]

}
