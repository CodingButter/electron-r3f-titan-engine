{
    "compilerOptions": {
        "target": "ES2020",
        "useDefineForClassFields": true,
        "lib": [
            "ES2020", "DOM", "DOM.Iterable"
        ],
        "module": "ESNext",
        "skipLibCheck": true,
        "moduleResolution": "bundler",
        "allowImportingTsExtensions": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-jsx",
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
        "baseUrl": "./src",
        "paths": {
            "@titan/*": ["./*"],
            "@titan-electron/*": ["../electron/*"],
            "@titan-engine/*": ["engine/*"],
            "@titan-ui/*": ["ui/*"],
            "@titan-shared/*": ["shared/*"],
            "@titan-utils/*": ["../electron/utils/*"]
        }


    },
    "include": [
        "./src/**/*", "./electron/**/*"
    ],
    "references": [
        {
            "path": "./tsconfig.node.json"
        }
    ]

}
